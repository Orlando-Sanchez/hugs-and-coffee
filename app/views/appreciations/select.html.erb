<%= render 'layouts/profile_header' %>
<div class="main primary-bkgrnd">
  <div class= "back-wrapper">
    <%= link_to profile_path do%>
      <%= image_tag("Vector.svg", class: "vector-img") %>
      <span class= "back primary-font">Atrás</span>
    <% end %>
  </div>
  <div class="select-appreciation-wrapper">
    <div class="select-appreciation-container">
      <div class="select-header-container">
        <span class="select-appreciation-header primary-font">Formas de reconocer a <%=@profile.fullname%></span>
      </div>
      <div class="flex-space" >
        <%= link_to coffee_path, class: "appreciation-link" do %>
            <div>
              <%= image_tag("coffee.svg", class: "coffee-img2") %>
            </div>
            <span class="primary-font">Café</span>
        <% end %>
        <%= link_to hug_path, class: "appreciation-link" do %>
            <div>
              <%= image_tag("heart.svg", class: "heart-img") %>
            </div>
            <span class="primary-font">Abrazo</span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="girl-img-wrapper">   
    <%= image_tag("girl-mobile.svg") %>
  </div>
  <div class="instruction-wrapper">
    <span class="primary-font instruction">Selecciona alguna de las dos opciones para continuar</span>
  </div>
</div>